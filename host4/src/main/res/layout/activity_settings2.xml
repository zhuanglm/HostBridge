<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="top"
    android:background="@color/colorDg"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/b_date_time"
        android:textAlignment="viewStart"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/b_round2"
        android:text="@string/set_date_time"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="444dp" />

    <Button
        android:id="@+id/b_test"
        android:textAlignment="viewStart"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/b_round2"
        android:text="@string/test_settings"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="444dp" />

    <Button
        android:id="@+id/b_host"
        android:textAlignment="viewStart"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/b_round2"
        android:text="@string/host_settings"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="444dp" />

    <Button
        android:id="@+id/b_reader_settings"
        android:textAlignment="viewStart"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/b_round2"
        android:text="@string/reader_settings"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="444dp" />


    <Button
        android:id="@+id/b_qa_schedule"
        android:textAlignment="viewStart"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/b_round2"
        android:text="@string/qa_schedule_settings"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="444dp" />

    <Button
        android:id="@+id/b_data_management"
        android:textAlignment="viewStart"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/data_management"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/b_round2"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="444dp" />

    <Button
        android:id="@+id/b_about"
        android:textAlignment="viewStart"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/b_round2"
        android:text="@string/about"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="444dp" />

    <Button
        android:id="@+id/b_exit_host"
        android:textAlignment="viewStart"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/b_round2"
        android:text="@string/exit_host"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="444dp" />

    <Button
        android:id="@+id/kiosk_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/b_round2"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="@string/kiosk_mode"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="444dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/relativeLayout">


            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:weightSum="3"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <Button
                    android:id="@+id/b_back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorLg"
                    android:text="@string/back"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/b_home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:text="@string/home"
                    android:background="@color/colorLg"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/b_login"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorLg"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
