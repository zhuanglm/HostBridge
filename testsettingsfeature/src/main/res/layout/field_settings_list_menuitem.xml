<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/menuitem_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAlereLightGray"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/menuitem_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingBottom="12dp"
            android:paddingEnd="0dp"
            android:paddingStart="35dp"
            android:paddingTop="12dp"
            android:text="Child Key"
            android:textColor = "@color/colorPrimaryDark"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/menuitem_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingBottom="12dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="12dp"
            android:text="Child Value"
            android:textColor = "@color/colorPrimaryDark"
            android:textSize="17sp"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_yes_no"
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:checked="true"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            android:theme="@style/BrandedSwitch.control"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuitem_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAlereLightGray"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/menuitem_action_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingEnd="0dp"
            android:paddingStart="35dp"
            android:paddingTop="12dp"
            android:text="Action Key"
            android:textColor = "@color/colorPrimaryDark"
            android:textSize="17sp"/>

    </LinearLayout>
</FrameLayout>