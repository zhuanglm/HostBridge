<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <!-- draw a 1 dp width border around the rectangle shape -->
        <stroke android:color="#d8d8d8" android:width="1dp"/>
    </shape>
</item>
<!--
    hide left and right side border using white rectangle over
    by placing the rectangle offset from bottom=1dp and top=1dp
-->
<item android:bottom="1dp" android:top="1dp">
    <shape android:shape="rectangle">
        <solid android:color="@android:color/white"/>
    </shape>
</item>
</layer-list>