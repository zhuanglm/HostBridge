<resources>
    <style name="THAppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="colorControlNormal">@android:color/white</item>-->
    </style>

    <style name="DialogActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- This changes overflow icon colour. -->
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="CheckboxStyle" parent="AppTheme">
        <item name="colorAccent">@color/primaryBlueNew</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <!--<style name="ActionBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">-->
    <style name="ActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <!-- This changes overflow icon colour. -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- Disable default All Cap title in ActionBar -->
        <item name="android:textAllCaps">false</item>

        <!--<item name="android:textColorHint">@android:color/darker_gray</item>-->
        <!--<item name="android:editTextColor">@android:color/black</item>-->
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Extends maxWidth -->
        <item name="android:maxWidth">10000dp</item>
        <!-- Set hint text -->
        <item name="android:queryHint">@string/search_hint</item>
        <!-- Background for the search query section (e.g. EditText) -->
        <item name="queryBackground">@android:color/white</item>
        <!-- Background for the actions section (e.g. voice, submit) -->
        <!--<item name="submitBackground"></item>-->
        <!-- Close button icon -->
        <item name="closeIcon">@drawable/ic_clear_black_24dp</item>
        <!-- Magnifying glass icon (null will hide the icon) -->
        <item name="searchHintIcon">@null</item>
        <!-- Search button icon (does not work overriding...)-->
        <!--<item name="searchIcon">@drawable/ic_search_black_24dp</item>-->
        <!-- Go/commit button icon -->
        <!--<item name="goIcon"></item>-->
        <!-- Voice search button icon -->
        <!--<item name="voiceIcon"></item>-->
        <!-- Commit icon shown in the query suggestion row -->
        <!--<item name="commitIcon"></item>-->
        <!-- Layout for query suggestion rows -->
        <!--<item name="suggestionRowLayout"></item>-->
    </style>

    <style name="PopupStyle" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:itemBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/primaryBlueNew</item>
    </style>
</resources>
